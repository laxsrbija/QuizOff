<UserControl x:Class="QuizOff.Controls.ScoreboardItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuizOff.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel Name="Container" VerticalAlignment="Center">
        <Label Name="Rank" Style="{StaticResource QuizOffLabel}" DockPanel.Dock="Left" Width="40" FontWeight="Medium"/>
        <Label Name="Username" Style="{StaticResource QuizOffLabel}" DockPanel.Dock="Left" FontWeight="Medium"/>
        <Label Name="PointsStub" Style="{StaticResource QuizOffLabel}" DockPanel.Dock="Right" HorizontalAlignment="Right" Content="points" FontWeight="Medium"/>
        <Label Name="Points" Style="{StaticResource QuizOffLabel}" DockPanel.Dock="Right" HorizontalAlignment="Right" FontWeight="Medium"/>
    </DockPanel>
</UserControl>
