<UserControl x:Class="QuizOff.Controls.CategoryItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuizOff.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Cursor="Hand" MouseDown="SelectCategory" Height="150" Width="250" Margin="10">
        <Rectangle RadiusX="5" RadiusY="5">
            <Rectangle.Fill>
                <ImageBrush x:Name="Picture" Stretch="UniformToFill" Opacity="0.5"/>
            </Rectangle.Fill>
        </Rectangle>
        <Label Name="Title" Style="{StaticResource QuizOffLabel}" FontWeight="Medium" VerticalAlignment="Bottom" Margin="10"/>
    </Grid>
    
</UserControl>
