<Window x:Class="QuizOff.ErrorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuizOff"
        mc:Ignorable="d"
        Title="Error" Height="226.883" Width="582.531" Icon="Resources/icon.ico" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <StackPanel Style="{StaticResource QuizOffStackPanel}">
        <StackPanel Orientation="Horizontal">
            <Image Source="Resources/alert-octagon.png" Margin="20, 0, 0, 0" Height="125" Width="125"/>
            <TextBlock Style="{StaticResource QuizOffTextBlock}" Text="{Binding Message}" VerticalAlignment="Center" Margin="10" FontSize="22" TextWrapping="Wrap"/>
        </StackPanel>
        <Button Style="{StaticResource QuizOffButton}" Content="OK" Height="30" Margin="20" IsDefault="True" IsCancel="True"/>
    </StackPanel>
</Window>
