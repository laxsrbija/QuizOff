<Page x:Class="QuizOff.Views.PictureQuestion"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:QuizOff.Views"
      mc:Ignorable="d" 
      d:DesignHeight="175" d:DesignWidth="730"
      Title="PictureQuestion">

    <Grid>
        <StackPanel Orientation="Horizontal">
            <Image Source="{Binding ParentTemplate.CurrentQuestion.ImageUrl}"/>
            <TextBlock Text="{Binding ParentTemplate.CurrentQuestion.Text}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</Page>
