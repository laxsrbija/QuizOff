<Page x:Class="QuizOff.Views.PictureQuestion"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:QuizOff.Views"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="840"
      Title="PictureQuestion">

    <Grid>
        <DockPanel>
            <Image Source="{Binding ParentTemplate.CurrentQuestion.ImageUrl}" DockPanel.Dock="Left" MaxWidth="250"/>
            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="20, 0, 0, 0" DockPanel.Dock="Right">
                <TextBlock Text="{Binding ParentTemplate.CurrentQuestion.Text}" Style="{StaticResource QuizOffQuestionTextBlock}" HorizontalAlignment="Center" VerticalAlignment="Stretch" TextWrapping="Wrap"/>
            </Grid>
        </DockPanel>
    </Grid>
</Page>
