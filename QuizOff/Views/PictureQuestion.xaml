<Page x:Class="QuizOff.Views.PictureQuestion"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:QuizOff.Views"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="840"
      Title="PictureQuestion">

    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
        <Image Source="{Binding ParentTemplate.CurrentQuestion.ImageUrl}" MaxWidth="250" MaxHeight="250" Margin="0, 0, 100, 0"/>
        <TextBlock Text="{Binding ParentTemplate.CurrentQuestion.Text}" Style="{StaticResource QuizOffQuestionTextBlock}" HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap"/>
    </StackPanel>
</Page>
