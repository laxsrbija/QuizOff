<Page x:Class="QuizOff.Views.MainMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:QuizOff.Views"
      mc:Ignorable="d" 
      d:DesignHeight="561" d:DesignWidth="904"
      Title="MainMenu">

    <Grid Style="{StaticResource QuizOffGridBackground}">
        <Image HorizontalAlignment="Center" Height="271" Margin="231,58,230,0" VerticalAlignment="Top" Width="443" Source="/QuizOff;component/Resources/logo-large.png"/>
        <Label Name="UsernameLabel" Content="Label" HorizontalContentAlignment="Right" HorizontalAlignment="Right" Margin="0,21,31,0" VerticalAlignment="Top" Width="145"/>
        <Button Content="Play" HorizontalAlignment="Left" Margin="389,377,0,0" VerticalAlignment="Top" Width="75" Click="PlayButton_Click" IsDefault="True"/>
        <Button Content="Log out" HorizontalAlignment="Left" Margin="389,425,0,0" VerticalAlignment="Top" Width="75" Click="LogOffButton_Click"/>
        <Image Source="{Binding AudioIcon}" HorizontalAlignment="Left" Margin="702,47,0,0" VerticalAlignment="Top" Width="32" Height="32" MouseDown="ToggleAudio"/>
    </Grid>

</Page>
