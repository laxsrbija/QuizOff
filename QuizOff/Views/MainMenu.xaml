<Page x:Class="QuizOff.Views.MainMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:QuizOff.Views"
      mc:Ignorable="d" 
      d:DesignHeight="561" d:DesignWidth="904"
      Title="MainMenu">

    <StackPanel Style="{StaticResource QuizOffStackPanel}" Orientation="Vertical">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0, 20, 20, 0">
            <Label Content="{Binding Username}" Style="{StaticResource QuizOffLabel}" FontSize="18" Margin="0, 0, 20, 0"/>
            <Image Source="{Binding AudioIcon}" Width="32" Height="32" MouseDown="ToggleAudio"/>
        </StackPanel>
        <Image Height="271" Width="443" Margin="0, 15, 0, 30" Source="/QuizOff;component/Resources/logo-large.png"/>
        <Button Style="{StaticResource QuizOffButton}" Content="Play" Width="450" Margin="0, 20, 0, 0" Height="40" Click="PlayButton_Click" IsDefault="True" Cursor="Hand"/>
        <Button Style="{StaticResource QuizOffButton}" Content="Log out" Width="450" Margin="0, 20, 0, 0" Height="40" Click="LogOffButton_Click" Cursor="Hand"/>
    </StackPanel>

</Page>
