<Window x:Class="QuizOff.Views.SignUpDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuizOff.Views"
        mc:Ignorable="d"
        Title="Create an account" Height="315.28" Width="403.933" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Icon="/QuizOff;component/Resources/icon.ico">
    <Grid Style="{StaticResource QuizOffGridBackground}">
        <StackPanel Margin="10">
            <Image Source="/QuizOff;component/Resources/logo-horizontal.png" Width="200" Margin="0, 10, 0, 15"/>
            <Label Content="Username:" Style="{StaticResource QuizOffLabel}"/>
            <TextBox Name="SignupUsername" Height="30" TextWrapping="Wrap" HorizontalContentAlignment="Stretch" Style="{StaticResource QuizOffTextBox}" Margin="0, 0, 0, 10" Padding="5"/>
            <Label Content="Password:" Style="{StaticResource QuizOffLabel}"/>
            <PasswordBox Name="SignupPassword" Height="30" HorizontalContentAlignment="Stretch" Style="{StaticResource QuizOffPasswordBox}" Padding="5"/>
            <Button Content="Sign Up" Height="30" IsDefault="True" Click="SignUp" Style="{StaticResource QuizOffButton}" Margin="0, 20, 0, 0"/>
        </StackPanel>
    </Grid>
</Window>
