<Page x:Class="QuizOff.Views.Category"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:QuizOff.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Category">

    <Grid>
        <Label Content="{Binding Name}" HorizontalAlignment="Left" Margin="158,58,0,0" VerticalAlignment="Top"/>
        <Label Content="{Binding Id}" HorizontalAlignment="Left" Margin="168,153,0,0" VerticalAlignment="Top"/>
        <TextBlock Text="{Binding Description}" HorizontalAlignment="Left" Height="114" Margin="81,293,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="643"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="184,420,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>

    </Grid>
</Page>
