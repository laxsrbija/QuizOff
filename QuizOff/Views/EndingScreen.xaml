<Page x:Class="QuizOff.Views.EndingScreen"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:QuizOff.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EndingScreen">

    <Grid Style="{StaticResource QuizOffGridBackground}">
        <Label Content="{Binding Points}" HorizontalAlignment="Left" Margin="69,219,0,0" VerticalAlignment="Top"/>
        <Button Content="Play Again" HorizontalAlignment="Left" Margin="84,332,0,0" VerticalAlignment="Top" Width="135" Click="PlayAgain"/>
        <Button Content="Return to Main Menu" HorizontalAlignment="Left" Margin="84,357,0,0" VerticalAlignment="Top" Width="135" Click="ReturnToMain"/>
        <StackPanel Name="Scoreboard" Orientation="Vertical" HorizontalAlignment="Left" Height="396" Margin="387,34,0,0" VerticalAlignment="Top" Width="370"/>
        <Label Content="Your score:" HorizontalAlignment="Left" Margin="79,136,0,0" VerticalAlignment="Top"/>
    </Grid>
</Page>
